; Script generated by the HM NIS Edit Script Wizard.
!include x64.nsh
!include StrReplace.nsh
!include IsUserAdmin.nsh

; HM NIS Edit Wizard helper defines
!define PRODUCT_NAME "GreenCubes"
!define PRODUCT_PUBLISHER "GreenCubes"
!define PRODUCT_WEB_SITE "https://greencubes.org"
!define PRODUCT_UNINST_ROOT_KEY "HKCU"
!define PRODUCT_UNINST_KEY "Software\GreenCubes"
!define PRODUCT_DIR_REGKEY "Software\GreenCubes"
!define REG_UNINSTALL "Software\Microsoft\Windows\CurrentVersion\Uninstall\GreenCubes"
;Get installation folder from registry if available
InstallDirRegKey HKCU "${PRODUCT_DIR_REGKEY}" ""

SetCompressor lzma
RequestExecutionLevel user ; Re-ask admin permissions so uninstaller runs under the same user as installer

;--------------------------------
;Variables

Var StartMenuFolder

; MUI 1.67 compatible ------
!include "MUI.nsh"

; MUI Settings
!define MUI_ABORTWARNING
!define MUI_ICON "C:\_Greencubes\Git\GreenCubesLauncher\install\icon.ico"
!define MUI_UNICON "${NSISDIR}\Contrib\Graphics\Icons\modern-uninstall.ico"

; Language Selection Dialog Settings

!define MUI_LANGDLL_REGISTRY_ROOT "${PRODUCT_UNINST_ROOT_KEY}"
!define MUI_LANGDLL_REGISTRY_KEY "${PRODUCT_UNINST_KEY}"
!define MUI_LANGDLL_REGISTRY_VALUENAME "NSIS:Language"

;Pages
  ; Welcome page
    ;!insertmacro MUI_PAGE_WELCOME
  ; License page
    ;!insertmacro MUI_PAGE_LICENSE "c:\path\to\licence\YourSoftwareLicence.txt"
  ; Directory page
    !insertmacro MUI_PAGE_DIRECTORY
  ;Start Menu Folder Page
    !define MUI_STARTMENUPAGE_REGISTRY_ROOT "${PRODUCT_UNINST_ROOT_KEY}"
    !define MUI_STARTMENUPAGE_REGISTRY_KEY "${PRODUCT_UNINST_KEY}"
    !define MUI_STARTMENUPAGE_REGISTRY_VALUENAME "Start Menu Folder"

    !insertmacro MUI_PAGE_STARTMENU Application $StartMenuFolder

  ; Instfiles page
    !insertmacro MUI_PAGE_INSTFILES

